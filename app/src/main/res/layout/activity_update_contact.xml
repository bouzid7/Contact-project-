<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ReceiveDataToUpdate"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Update Contact"
            android:textSize="30dp"
            android:textColor="#6200EE"
              android:textStyle="italic"
             android:padding="20dp"
            android:shadowColor="#80000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="10"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/firstname_up"
                android:background="@drawable/search_view"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lastname_up"
                android:background="@drawable/search_view"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/service_up"
                android:background="@drawable/search_view"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_up"
                android:background="@drawable/search_view"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tel_up"
                android:background="@drawable/search_view"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <Button
                android:id="@+id/update_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="update"
                android:background="@drawable/search_view"
                android:layout_marginLeft="100dp"
                android:backgroundTint="#aaf255"
                />

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="cancel"
                android:background="@drawable/search_view"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#E53935"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>